@model Project_Fin_Etude___Maalem_Bin_Idik.Models.Verification
@{
    ViewBag.Title = "ResetEmailVerification";
    Layout = "~/Views/Shared/_Navigation.cshtml";
}

<div style="margin-top:10px">
    @if (Session["CodeStatu"] != null)
    {
        <div class="alert alert-warning" role="alert" id="my-alert" style="position: absolute!important;top: 50%!important;left: 50%!important;transform: translate(-50%, -50%);z-index: 2;">
            <b>Code de vérification incorrect! </b>Veuillez réessayer.
        </div>
    }
    <div class="content-container">
        <div class="container">
            @using (Html.BeginForm("ResetEmailVerification", "Login", FormMethod.Post))
            {
                <div class="header">
                    <img src="~/Content/VerificationAccount_Content/img/lm3lam black.svg" alt="">
                    <h4>Récupérer votre compte</h4>
                </div>
                <div class="body">
                    <div class="mb-3">
                        <label class="form-label">Veuillez vérifier votre boite éléctronique et entrer le code de vérification :</label>
                        <input type="text" class="form-control" name="Verification_code" required>
                    </div>
                </div>
                <div class="footer">
                    <button type="submit" class="btn btn-warning">Vérifier</button>
                    <span>
                        <a href="/Login/VerificationCodeSender">Si le code n'est pas reçu, veuillez clicker ici.</a>
                    </span>
                </div>
            }
        </div>
    </div>
</div>